.device.body
  = render "devise/shared/header"
  .registrations_main
    .container.head
      %h1 会員情報入力
  .registrations_main
    .container.inner
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        .group
          %h2
            ニックネーム
            %span 必須
          = f.text_field :nickname, class: 'input_box', placeholder: '例)メルカリ太郎', autofocus: true
          - if resource.errors[:nickname].present?
            %p.red ニックネームを入力してください
        .group
          %h2
            メールアドレス
            %span 必須
          = f.text_field :email, class: 'input_box', placeholder: 'PC・携帯どちらでも可', autofocus: true
          - if resource.errors[:email].present?
            %p.red メールアドレスを入力してください
            %p.red ※同じメールアドレスは使えません
        .group
          %h2
            パスワード
            %span 必須
          = f.password_field :password, class: 'input_box', placeholder: '7文字以上の半角英数字', autofocus: true
          - if resource.errors[:password].present?
            %p.red パスワードを入力してください
          %p.gray ※英字と数字の両方を含めて設定してください
        %h1 本人確認
        %p 安心・安全にご利用いただくために、お客さまの本人情報の登録にご協力ください。他のお客さまに公開されることはありません。
        .group
          %h2
            お名前(全角)
            %span 必須
          .form
            = f.text_field :last_name, class: 'input_box-half', placeholder: '例)山田', autofocus: true
            = f.text_field :first_name, class: 'input_box-half', placeholder: '例)彩', autofocus: true
          - if resource.errors[:last_name].present?
            %p.red 姓 を入力してください
          - if resource.errors[:first_name].present?
            %p.red 名 を入力してください
        .group
          %h2
            お名前カナ(全角)
            %span 必須
          .form
            = f.text_field :last_name_kana, class: 'input_box-half', placeholder: '例)ヤマダ', autofocus: true
            = f.text_field :first_name_kana, class: 'input_box-half', placeholder: '例)アヤ', autofocus: true
          - if resource.errors[:last_name_kana].present?
            %p.red 姓カナ を入力してください
          - if resource.errors[:first_name_kana].present?
            %p.red 名カナ を入力してください
        .group
          %h2
            生年月日
            %span 必須
          .form
            = raw sprintf(f.date_select(:birthday, with_css_classes:'input_box-quarter', prompt:"--", use_month_numbers: true, start_year: (Time.now.year - 70), end_year: (Time.now.year), default: Date.new(Time.now.year - 20, 4, 1), date_separator: '%s'), '年 ', '月 ') + '日'
          - if resource.errors[:birthday].present?
            %p.red 生年月日を入力してください
          %p.gray ※本人情報は正しく入力してください。会員登録後、修正するにはお時間を頂く場合があります。
        %p
          = surround '「登録する」のボタンを押すことにより、', 'に同意したものとみなします' do          
            = link_to "利用規約", "#"
        = f.submit '次へ', class: 'btn red'
      .about_registrations
        %p
          = link_to "本人情報の登録について>>", "#"
  = render "devise/shared/footer"
